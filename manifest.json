{
  "manifest_version": 3,
  "name": "CookiesShallNotPass",
  "version": "1.0.0",
  "description": "Blocks unwanted cookies, fully customizable",
  "permissions": [
    "cookies",
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "declarative_net_request": {
    "rule_resources": []
  },
  "action": {
    "default_popup": "UI/popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "UI/dashboard.html",
        "UI/dashboard.js",
        "UI/dashboard.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
